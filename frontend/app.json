{
  "expo": {
    "name": "SkinGlow AI",
    "slug": "skinglow-ai",
    "scheme": "skinglowai",
    "version": "2.4.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "icon": "./assets/adaptive-icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#4F46E5"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "android": {
      "package": "com.lemenode.skinglow",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#4F46E5"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "ios": {
      "supportsTablet": true
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow SkinGlow AI to access your camera for skin analysis."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow SkinGlow AI to access your photos for skin analysis."
        }
      ],
      "expo-font"
    ],
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "f614f02e-b4a5-4f79-9747-87ce5e4d8390"
      }
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/f614f02e-b4a5-4f79-9747-87ce5e4d8390"
    }
  }
}